<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="18dp"
            android:text="Profile"
            android:textSize="25sp"
            android:textStyle="normal"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            />




        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:layout_marginTop="50dp"
            android:padding="30dp"
            />

        <Button
            android:id="@+id/camerabtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="200dp"
            android:background="@android:color/transparent"

            android:onClick="open_camera">

        </Button>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="170dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="20dp"
            android:text="Ashma Maharjan"
            android:textAlignment="center"
            android:textSize="23sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="170dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="-160dp"
            android:text="BSc(Hons) Mobile Application Development"
            android:textAlignment="center"
            android:textSize="15sp"

            />
        <ImageView
            android:id="@+id/female"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-150dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="170dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="-35dp"
            android:text="Female"
            android:layout_marginStart="115dp"
            android:textAlignment="center"
            android:textSize="17sp"
            />
        <ImageView
            android:id="@+id/mail"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="-150dp"

          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="-35dp"
            android:layout_marginStart="115dp"
            android:text="ashmamaharjan532@gmail.com"
            android:textAlignment="center"
            android:textSize="17sp" />
        <ImageView
            android:id="@+id/house"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"

           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="-100dp"
            android:fontFamily="sans-serif-black"
            android:text="Chakupat, Lalitpur"
            android:textAlignment="center"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="36dp"
            android:layout_height="41dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="120dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2000dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="115dp"
            android:layout_marginTop="-35dp"
            android:text="9863021107"
            android:textAlignment="center"
            android:textSize="17sp" />






    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/border"
            android:layout_width="441dp"
            android:layout_height="200dp"
            android:layout_gravity="top"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="70dp"
            android:paddingStart="20dp"
            android:paddingEnd="6dp"
          />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="630dp"
        android:gravity="center">

        <!-- Facebook Icon -->
        <ImageView
            android:id="@+id/fb"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_margin="16dp"
            android:clickable="true"
            />

        <!-- Instagram Icon -->
        <ImageView
            android:id="@+id/insta"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_margin="16dp"
            android:clickable="true"
            />

    </LinearLayout>

</FrameLayout>
