<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="vertical">
        <!-- Your existing content -->

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/banner_image"
                    android:layout_width="450dp"
                    android:layout_height="200dp"
                    android:paddingStart="-100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bgg" />


                <TextView
                    android:id="@+id/featured_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Featured Products"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_margin="16dp"/>


                <TextView
                    android:id="@+id/description4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makeup verticalElevate your beauty routine with our premium makeup collection, designed to enhance your natural features and unleash your inner confidence."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card 5 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/image55"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:paddingTop="-90dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/title50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eyeshadow"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/description77"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get mesmerizing eyes with our velvety eyeshadows, offering vibrant colors and long-lasting wear."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/image54"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lip" />

                <TextView
                    android:id="@+id/title7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lipstick"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/description8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Embrace your pout with our luxurious lipsticks, delivering rich pigment and a silky smooth finish for all-day glam."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lip" />

                <TextView
                    android:id="@+id/title6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lipstick"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/description6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Embrace your pout with our luxurious lipsticks, delivering rich pigment and a silky smooth finish for all-day glam."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>







    </GridLayout>

</ScrollView>
